<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/actor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_8"
        android:background="@drawable/round_corners"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/actor_name"
        style="@style/actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:breakStrategy="balanced"
        android:layout_marginTop="@dimen/actor_name_margin"
        app:layout_constraintEnd_toEndOf="@+id/actor"
        app:layout_constraintStart_toStartOf="@+id/actor"
        app:layout_constraintTop_toBottomOf="@+id/actor"
        tools:text="@string/actor_1" />

</androidx.constraintlayout.widget.ConstraintLayout>